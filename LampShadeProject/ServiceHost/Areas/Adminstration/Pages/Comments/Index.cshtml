@page

@model ServiceHost.Areas.Adminstration.Pages.Comments.IndexModel
@{
}


@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت پیغام ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>

    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در محصولات</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="form-control" asp-for="SearchModel.Name" placeholder="نام محصول">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Email"></label>
                        <input class="form-control" asp-for="SearchModel.Email" placeholder="ایمیل">
                    </div>
                   
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست پیام ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>شماره</th>
                                    <th>نام </th>
                                    <th>ایمیل</th>
                                    <th>پیام</th>
                                    <th>تاریخ</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Comments)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Message</td>
                                    <td>@item.CommentDate</td>
                                    <td class="text-center">
                                        @if (item.IsCanceled)
                                        {
                                            <i class="text-danger">کنسل شده</i>
                                        }
                                        @if (!item.IsCanceled && !item.IsConfirmed)
                                        {
                                            <i class="text-warning">در انتظار</i>
                                        }
                                        @if (!item.IsCanceled && item.IsConfirmed)
                                        {
                                            <i class="text-success">تایید شده</i>
                                        }

                                    </td>
                                    <td>
                                        <a asp-page="./Index" asp-page-handler="Cancel" asp-route-id="@item.Id"
                                           class="btn btn-danger waves-effect waves-light m-b-5"> کنسل</a>

                                        @if (!item.IsConfirmed)
                                        {
                                            <a asp-page="./Index" asp-page-handler="Confirm" asp-route-id="@item.Id"
                                               class="btn btn-success waves-effect waves-light m-b-5"> تایید</a>
                                        }
                                        else
                                        {
                                            <a asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"
                                               class="btn btn-success waves-effect waves-light m-b-5">فعال سازی</a>
                                        }
                                    </td>

                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script type="text/javascript">$(document).ready(function () { $('#datatable').dataTable(); });</script>
}
